<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4">


        <ImageView
            android:id="@+id/list_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/placeholder"/>

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nome na Lista"
            android:paddingBottom="@dimen/list_simple_text_margin"
            android:paddingLeft="@dimen/list_simple_text_margin"
            android:paddingRight="@dimen/list_simple_text_margin"
            android:paddingTop="@dimen/list_simple_text_margin"
            android:background="@drawable/customborder"
            android:minHeight="@dimen/list_default_min_height"/>

        <TextView
            android:id="@+id/authors"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nome na Lista"
            android:paddingBottom="@dimen/list_simple_text_margin"
            android:paddingLeft="@dimen/list_simple_text_margin"
            android:paddingRight="@dimen/list_simple_text_margin"
            android:paddingTop="@dimen/list_simple_text_margin"
            android:background="@drawable/customborder"
            android:minHeight="@dimen/list_default_min_height"/>


        <TextView
            android:id="@+id/website"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nome na Lista"
            android:paddingBottom="@dimen/list_simple_text_margin"
            android:paddingLeft="@dimen/list_simple_text_margin"
            android:paddingRight="@dimen/list_simple_text_margin"
            android:paddingTop="@dimen/list_simple_text_margin"
            android:background="@drawable/customborder"
            android:minHeight="@dimen/list_default_min_height"/>


        <TextView
            android:id="@+id/date"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_simple_text_margin"
            android:paddingLeft="@dimen/list_simple_text_margin"
            android:paddingRight="@dimen/simple_text_margin"
            android:paddingTop="@dimen/list_simple_text_margin"
            android:background="@drawable/customborder"
            android:minHeight="@dimen/list_default_min_height"
            tools:text="Nome na Lista" />

    </LinearLayout>
</FrameLayout>